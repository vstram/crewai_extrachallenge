# Model Configuration
# Configure the model you want to use
# MODEL=ollama/llama3.1:8b
MODEL=gpt-4.1-2025-04-14
# MODEL=gpt-5-2025-08-07
API_BASE=http://localhost:11434
CREWAI_TRACING_ENABLED=false

# LLM Settings
# LLM Temperature Settings (0.0 = deterministic, 1.0 = creative)
TEMP_DATA_ANALYST=0.1         # Low temp for precise analysis
TEMP_PATTERN_AGENT=0.3        # Medium temp for pattern discovery
TEMP_CLASSIFICATION=0.1       # Low temp for consistent decisions
TEMP_REPORTING=0.2            # Slight creativity for clear writing

# Dataset Configuration
# Change the path to point to your dataset!!
# DATASET_PATH=/Users/vstram/work/i2a2/crewai_extrachallenge/dataset/data/credit_card_transactions.csv
DATASET_PATH=/Users/vstram/work/i2a2/crewai_extrachallenge/dataset/data/credit_card_transactions-huge.csv

CHROMA_OPENAI_API_KEY=dummy_key_for_local_ollama # Temporary API key for CSVSearchTool (using local Ollama)
OPENAI_API_KEY=YOUR_OPENAI_API_KEY

# Database Configuration (SQLite for efficient large file handling)
USE_DATABASE=true                           # Enable database mode for memory-efficient analysis
DB_PATH=fraud_detection.db                  # SQLite database file path (in project root)
DB_TABLE=transactions                       # Default table name for transaction data
DB_URI=sqlite:///fraud_detection.db         # SQLAlchemy connection URI for tools
DB_CHUNK_SIZE=10000                         # Rows per chunk during CSV conversion (adjust for memory)
